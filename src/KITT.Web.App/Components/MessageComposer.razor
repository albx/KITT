@inject IDialogService Dialog
@inject IStringLocalizer<Resources.Components.MessageComposer> Localizer

<AuthorizeView>
    <Authorized>
        <MudIconButton Icon="@Icons.Material.Filled.Message"
                       Color="Color.Primary"
                       Variant="Variant.Filled"
                       aria-label="@Localizer[nameof(Resources.Components.MessageComposer.ComposeMessageButtonLabel)]"
                       class="mr-4"
                       OnClick="OpenMessageEditor"/>
    </Authorized>
</AuthorizeView>

@code {
    void OpenMessageEditor()
    {
        Dialog.Show<MessageEditorDialog>(
            Localizer[nameof(Resources.Components.MessageComposer.MessageEditorDialogTitle)],
            new DialogOptions
            {
                MaxWidth = MaxWidth.Large,
                FullWidth = true,
                Position = DialogPosition.TopCenter
            });
    }
}
