@page "/"

<PageTitle>KITT - Console</PageTitle>

<SectionContent SectionName="@SectionNames.PageTitleSectionName">
    KITT - Console
</SectionContent>

<AuthorizeView>
    <Authorized>
        @if (!RendererInfo.IsInteractive)
        {
            <FluentProgress />
        }
        else
        {
            <FluentGrid>
                <FluentGridItem xs="12" md="6">
                    <KITT.Cms.Web.App.Components.StreamingStats />
                </FluentGridItem>

                <FluentGridItem xs="12" md="6">
                    <KITT.Proposals.Web.App.Components.ProposalsStats />
                </FluentGridItem>
            </FluentGrid>
        }
    </Authorized>
    <NotAuthorized>
        <RedirectToLogin />
    </NotAuthorized>
</AuthorizeView>
