@inject IDialogService DialogService
@inject IStringLocalizer<Resources.Components.MessageComposer> Localizer

<AuthorizeView>
    <Authorized>
        <FluentButton Appearance="Appearance.Lightweight"
                      IconStart="@(new Icons.Regular.Size20.Compose())"
                      OnClick="OpenMessageEditorAsync">
            @Localizer[nameof(Resources.Components.MessageComposer.ComposeMessageButtonLabel)]
        </FluentButton>
    </Authorized>
</AuthorizeView>

@code {
    private async Task OpenMessageEditorAsync()
    {
        await DialogService.ShowPanelAsync<MessageEditorDialog>(new()
        {
            Title = Localizer[nameof(Resources.Components.MessageComposer.MessageEditorDialogTitle)],
            Alignment = HorizontalAlignment.Right,
            Width = "50em"
        });
    }
}
